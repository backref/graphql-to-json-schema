{
  "compilerOptions": {
    "module": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "newLine": "lf",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["index.ts", "lib/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
